@page
@model Inventory_Management.Pages.Supplier.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Suppliers</h1>

<p>
    <a asp-page="Create">Create New Supplier</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Suppliers[0].SupplierName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Suppliers[0].ProductName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Suppliers[0].cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Suppliers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cost)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.supId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.supId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.supId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
