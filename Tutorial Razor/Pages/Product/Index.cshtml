@page
@model Inventory_Management.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-page="Create">Create New Product</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Products[0].ProductName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Products[0].Caterory)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Products[0].price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caterory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.probId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.probId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.probId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
